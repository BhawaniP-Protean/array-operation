#include<iostream>
using namespace std;
int main(){
int arr[5];
int sum=0;
cout<<"taking the marks"<<endl;
for(int i=0;i<5;i++){
   cin>>arr[i];
   cout<<" ";
} cout<<endl;
for(int i=0;i<5;i++){
    cout<<arr[i]<<" ";
    sum=sum+arr[i];
}
cout<<"the sum is "<<sum;
int average =sum/5;
cout<<"the average is "<<average;
}
